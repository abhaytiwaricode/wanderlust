<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show mb-2 mt-2 mx-auto col-6"
  role="alert"
  id="successAlert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show mb-2 mt-2 mx-auto col-6"
  role="alert"
  id="errorAlert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
